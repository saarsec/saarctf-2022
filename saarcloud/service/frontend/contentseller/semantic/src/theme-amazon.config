/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'amazon';
@reset      : 'amazon';

/* Elements */
@button     : 'amazon';
@container  : 'amazon';
@divider    : 'amazon';
@emoji      : 'amazon';
@flag       : 'amazon';
@header     : 'amazon';
@icon       : 'amazon';
@image      : 'amazon';
@input      : 'amazon';
@label      : 'amazon';
@list       : 'amazon';
@loader     : 'amazon';
@placeholder: 'amazon';
@rail       : 'amazon';
@reveal     : 'amazon';
@segment    : 'amazon';
@step       : 'amazon';
@text       : 'amazon';

/* Collections */
@breadcrumb : 'amazon';
@form       : 'amazon';
@grid       : 'amazon';
@menu       : 'amazon';
@message    : 'amazon';
@table      : 'amazon';

/* Modules */
@accordion  : 'amazon';
@calendar   : 'amazon';
@checkbox   : 'amazon';
@dimmer     : 'amazon';
@dropdown   : 'amazon';
@embed      : 'amazon';
@modal      : 'amazon';
@nag        : 'amazon';
@popup      : 'amazon';
@progress   : 'amazon';
@slider     : 'amazon';
@rating     : 'amazon';
@search     : 'amazon';
@shape      : 'amazon';
@sidebar    : 'amazon';
@sticky     : 'amazon';
@tab        : 'amazon';
@toast      : 'amazon';
@transition : 'amazon';

/* Views */
@ad         : 'amazon';
@card       : 'amazon';
@comment    : 'amazon';
@feed       : 'amazon';
@item       : 'amazon';
@statistic  : 'amazon';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder  : 'site';


/*******************************
         Import Theme
*******************************/

@import (multiple) "theme.less";

/* End Config */
